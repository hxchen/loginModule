<ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:scrollbars="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                tools:context=".MainActivity" android:gravity="center_horizontal">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="登陆"
              android:textSize="75dp"
              android:textAlignment="center"
              android:layout_marginTop="120dp"
            />
    <EditText android:layout_width="200dp" android:layout_height="50dp" android:id="@+id/loginModule_login_name"
            android:hint="用户名"
            android:inputType="text"/>
    <EditText android:layout_width="200dp" android:layout_height="50dp" android:id="@+id/loginModule_login_pass"
            android:hint="密码"
            android:inputType="textPassword"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
            android:gravity="center_horizontal">
        <Button android:layout_width="100dp" android:layout_height="50dp"
                android:text="@string/login_button"
                android:id="@+id/login_button"
                android:onClick="loginModule_login"
                android:textSize="20dp"/>
        <Button android:layout_width="100dp" android:layout_height="50dp"
                android:text="@string/regist_button"
                android:id="@+id/regist_button"
                android:onClick="loginModule_regist"
                android:textSize="20dp"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>