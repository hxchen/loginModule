<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:scrollbars="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text=""
              android:textSize="75dp"
              android:textAlignment="center"
              android:layout_marginTop="120dp"
            />
    <ImageView android:layout_width="100dp" android:layout_height="100dp" android:id="@+id/loginModule_edit_image_view" />
    <TextView android:layout_width="200dp" android:layout_height="50dp" android:id="@+id/loginModule_edit_name"/>
    <EditText android:layout_width="200dp" android:layout_height="50dp" android:id="@+id/loginModule_edit_mail"
              android:inputType="textEmailAddress"
              android:hint="邮箱"
            />
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="获取图片"
            android:onClick="loginModule_getImage"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center_horizontal">
        <Button android:layout_width="100dp" android:layout_height="50dp"
                android:text="@string/edit_button"
                android:onClick="loginModule_save"
                android:textSize="20dp"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>